@model IEnumerable<ProjectWebApp.Models.File.File>
@{
	ViewData["Title"] = "FileView";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>File View</h1>

<form asp-action="Create" asp-controller="File" method="post" enctype="multipart/form-data">
	<p>
		<label>Name</label>
		<input name="Name" class="form-control" />
	</p>
	<p>
		<label>Material</label>
		<input name="Avatar" type="file" class="form-control" />
	</p>
	<p>
		<input type="submit" value="Добавить" />
	</p>
</form>
<h3>Все пользователи</h3>
@foreach (var p in Model)
{
	<div>
		<h4>@p.Name</h4>
		@if (p.Material != null)
		{
			<img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Material))" />
		}
	</div>
}