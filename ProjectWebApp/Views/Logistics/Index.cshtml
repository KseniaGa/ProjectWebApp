@using ProjectWebApp.Models.Logistics
@using ProjectWebApp.Models
@model LogisticsViewModel
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center;"> PROFITS:  @Html.DisplayFor(modelItem => Model.sumProfits) </h1>
<h1 style="text-align:center;"> EXPENSES:  @Html.DisplayFor(modelItem => Model.sumExenses) </h1>
<h1 style="text-align:center;"> BUDGET:  @Html.DisplayFor(modelItem => Model.budget) </h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Item
			</th>
			<th>
				Quantity
			</th>
			<th>
				Price Per Item
			</th>
			<th>
				Purpose
			</th>
			<th>
				Unit
			</th>
			<th>
				Project
			</th>
			<th>
				Overall Price
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Expenses)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Item)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantity)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PricePerItem)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Purpose)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Unit)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Project.Name)
				</td>

				<td>
					@Html.DisplayFor(modelItem => item.OverallPrice)
				</td>

			</tr>
		}
	</tbody>
</table>




<table class="table">
	<thead>
		<tr>
			<th>
				Resource
			</th>
			<th>
				Amount
			</th>
			<th>
				Project
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Profits)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Resource)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Amount)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Project.Name)
				</td>

			</tr>
		}
	</tbody>
</table>
