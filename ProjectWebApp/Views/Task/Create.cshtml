@model ProjectWebApp.Models.Task

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProjectId" class="control-label"></label>
				<select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
			</div>
			<div class="form-group">
				<label asp-for="todo" class="control-label"></label>
				@Html.CheckBoxFor(m => m.todo)
				<span asp-validation-for="todo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="process" class="control-label"></label>
				@Html.CheckBoxFor(m => m.process)
				<span asp-validation-for="process" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="done" class="control-label"></label>
				@Html.CheckBoxFor(m => m.done)
				<span asp-validation-for="done" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
